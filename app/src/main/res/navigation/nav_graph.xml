<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@+id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.movielibrary.ui.main.PopularMoviesFragment"
        android:label="MainFragment"
        tools:layout="@layout/main_fragment">
        <argument
            android:name="movie"
            app:argType="com.movielibrary.database.MovieEntity" />
        <action
            android:id="@+id/action_mainFragment_to_movieDetails"
            app:destination="@id/movieDetails" />
        <action
            android:id="@+id/action_mainFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
    </fragment>
    <fragment
        android:id="@+id/movieDetails"
        android:name="com.movielibrary.ui.movieDetails.MovieDetailsFragment"
        android:label="movie_details_fragment"
        tools:layout="@layout/movie_details_fragment" >
        <argument
            android:name="movie"
            app:argType="com.movielibrary.database.MovieEntity" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.movielibrary.ui.main.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/search_fragment" />
</navigation>
